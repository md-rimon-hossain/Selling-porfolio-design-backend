PORT=5000
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe Configuration
# For development: use test keys (sk_test_...)
# For production: use live keys (sk_live_...)
STRIPE_SECRET_KEY=sk_test_xxx_or_sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Super Admin (for initial setup)
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=SecurePassword123

# Development: Test locally with Stripe CLI
# stripe listen --forward-to localhost:5000/api/payments/webhook

# Production: Register webhook in Stripe Dashboard
# URL: https://your-api.vercel.app/api/payments/webhook
# Events: payment_intent.succeeded, payment_intent.payment_failed, payment_intent.canceled, charge.refunded